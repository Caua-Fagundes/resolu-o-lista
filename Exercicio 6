#include <iostream>

using namespace std;

int
main ()
{
  int seg, hor, min;
  cout << "digite o numero de horas: ";
  cin >> hor;
  cout << "digite o numero de minutos: ";
  cin >> min;
  cout << "digite o numero de segundos: ";
  cin >> seg;
  cout << "isso equivale a: ";
  cout << (hor * 3600) + (min * 60) + seg << " segundos.";
  return 0;
}
